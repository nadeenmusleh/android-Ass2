<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <Spinner
        android:id="@+id/my_spinner"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:labelFor="@+id/my_spinner_label"
        android:prompt="@string/spinner_prompt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_spinner">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/colorsLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"
                android:gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/black"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="50dp"
                    android:src="@drawable/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/noir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOIR"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/black"
                    app:layout_constraintTop_toTopOf="@+id/black" />

                <ImageView
                    android:id="@+id/red"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/red"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/black" />

                <TextView
                    android:id="@+id/rouge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ROUJE"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/red"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/red"
                    app:layout_constraintTop_toTopOf="@+id/red" />


                <ImageView
                    android:id="@+id/yellow"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/yello"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/red" />

                <TextView
                    android:id="@+id/jaune"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JAUNE"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/yellow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/yellow"
                    app:layout_constraintTop_toBottomOf="@+id/red" />


                <ImageView
                    android:id="@+id/green"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/green"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/yellow" />


                <TextView
                    android:id="@+id/vert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VERT"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/green"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/green"
                    app:layout_constraintTop_toBottomOf="@+id/yellow" />


                <ImageView
                    android:id="@+id/blue"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/blue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/green" />

                <TextView
                    android:id="@+id/bleu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BLUE"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/blue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/blue"
                    app:layout_constraintTop_toBottomOf="@+id/green" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/numbersLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">



                <ImageView
                    android:id="@+id/one"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="50dp"
                    android:src="@drawable/one"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/un"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UN"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/one"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/one"
                    app:layout_constraintTop_toTopOf="@+id/one" />


                <ImageView
                    android:id="@+id/two"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/two"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/one" />

                <TextView
                    android:id="@+id/deux"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEUX"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/two"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/two"
                    app:layout_constraintTop_toBottomOf="@+id/one" />


                <ImageView
                    android:id="@+id/three"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/three"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/two" />

                <TextView
                    android:id="@+id/trois"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TROIS"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/three"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/three"
                    app:layout_constraintTop_toBottomOf="@+id/two" />


                <ImageView
                    android:id="@+id/four"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/four"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/three" />

                <TextView
                    android:id="@+id/quatre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QUATRE"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/four"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/four"
                    app:layout_constraintTop_toBottomOf="@+id/three" />

                <ImageView
                    android:id="@+id/five"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/five"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/four" />

                <TextView
                    android:id="@+id/cinq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CINQ"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/five"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/five"
                    app:layout_constraintTop_toBottomOf="@+id/four" />


                <ImageView
                    android:id="@+id/six"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/six"
                    android:layout_marginStart="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/five" />

                <TextView
                    android:id="@+id/sixx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIX"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/six"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/six"
                    app:layout_constraintTop_toTopOf="@+id/six" />


                <ImageView
                    android:id="@+id/seven"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/seven"
                    android:layout_marginStart="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/six" />

                <TextView
                    android:id="@+id/sept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sept"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/seven"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/seven"
                    app:layout_constraintTop_toBottomOf="@+id/six" />


                <ImageView
                    android:id="@+id/eight"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/eight"
                    android:layout_marginStart="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/seven" />

                <TextView
                    android:id="@+id/huit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HUIT"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/eight"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/eight"
                    app:layout_constraintTop_toBottomOf="@+id/seven" />


                <ImageView
                    android:id="@+id/nine"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/nine"
                    android:layout_marginStart="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/eight" />

                <TextView
                    android:id="@+id/neuf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEUF"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/nine"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/nine"
                    app:layout_constraintTop_toBottomOf="@+id/eight" />


                <ImageView
                    android:id="@+id/ten"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ten"
                    android:layout_marginStart="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nine" />

                <TextView
                    android:id="@+id/dix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DIX"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/ten"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ten"
                    app:layout_constraintTop_toBottomOf="@+id/nine" />




            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/daysLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/monday"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/monday"
                    android:layout_margin="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/lundi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="LUNDI"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/monday"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/monday"
                    app:layout_constraintTop_toTopOf="@+id/monday" />


                <ImageView
                    android:id="@+id/tuesday"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/tuesday"
                    android:layout_marginStart="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/monday" />

                <TextView
                    android:id="@+id/mardi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="MARDI"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tuesday"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tuesday"
                    app:layout_constraintTop_toBottomOf="@+id/monday" />


                <ImageView
                    android:id="@+id/wednsday"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/wednsday"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tuesday" />

                <TextView
                    android:id="@+id/mercredi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="MERCREDI"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/wednsday"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/wednsday"
                    app:layout_constraintTop_toTopOf="@+id/wednsday" />


                <ImageView
                    android:id="@+id/thursday"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/thursday"
                    android:layout_marginStart="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/wednsday" />

                <TextView
                    android:id="@+id/jeudi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="JEUDI"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/thursday"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/thursday"
                    app:layout_constraintTop_toBottomOf="@+id/wednsday" />


                <ImageView
                    android:id="@+id/friday"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/friday"
                    android:layout_marginStart="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/thursday" />

                <TextView
                    android:id="@+id/vendredi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="VENDREDI"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/friday"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/friday"
                    app:layout_constraintTop_toBottomOf="@+id/thursday" />


                <ImageView
                    android:id="@+id/saturday"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/saturday"
                    android:layout_marginStart="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/friday" />

                <TextView
                    android:id="@+id/samedi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="SAMEDI"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/saturday"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/saturday"
                    app:layout_constraintTop_toTopOf="@+id/saturday" />


                <ImageView
                    android:id="@+id/sunday"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sunday"
                    android:layout_marginStart="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/saturday" />

                <TextView
                    android:id="@+id/dimanche"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="DIMANCHE"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/sunday"
                    app:layout_constraintTop_toTopOf="@+id/sunday" />

            </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>